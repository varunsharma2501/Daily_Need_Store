<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <!-- mobile metas -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="viewport" content="initial-scale=1, maximum-scale=1">
  <!-- site metas -->
  <title>cart</title>
  <meta name="keywords" content="">
  <meta name="description" content="">
  <meta name="author" content="">
  <!-- bootstrap css -->
  <link rel="stylesheet" href="/public/css/bootstrap.min.css">
  <!-- Responsive-->
  <link rel="stylesheet" href="/public/css/responsive.css">
  <link rel="stylesheet" href="/public/css/style.css">
  <!-- fevicon -->

  <!-- Scrollbar Custom CSS -->
  <link rel="stylesheet" href="/public/css/jquery.mCustomScrollbar.min.css">
  <!-- Tweaks for older IEs-->
  <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://use.fontawesome.com/releases/v5.0.1/css/all.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta1/css/all.css"
    integrity="your-integrity-value" crossorigin="anonymous" />

  <!-- Font Awesome 6 JavaScript file -->
  <script src="https://pro.fontawesome.com/releases/v6.0.0-beta1/js/all.js" integrity="your-integrity-value"
    crossorigin="anonymous"></script>
  <style>
    .total {
      display: flex;
      justify-content: space-between;
    }
    
  </style>
</head>

<body class="main-layout">


  <!-- end loader -->
  <!-- header -->
  <header>
    <!-- header inner -->
    <div class="header_bottom">
      <div class="container">
        <div class="row">
          <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
            <nav class="navigation navbar navbar-expand-md navbar-dark">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04"
                aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>

              <div class="collapse navbar-collapse" id="navbarsExample04">

                <ul class="navbar-nav mr-auto">
                  <li class="nav-item">
                    <a class="nav-link" href="/profile.hbs">
                      <i class="fas fa-user-circle fa-lg" style="color:#00bfff;"></i> {{user.name}}
                    </a>
                  </li>
                  <ul>
                    <LI></LI>
                  </ul>
                  <li class="nav-item">
                    <a class="nav-link" href="/contactus">

                      <i class="fa-solid fa-user-headset" style="color: #ffd43b;"></i>Contact Us
                    </a>
                  </li>
                </ul>


              </div>
            </nav>
          </div>


        </div>
      </div>
    </div>
  </header>
  {{#if empty}}
  <div style="display: flex;justify-content: space-around;">
    <h1>Your Cart is <span style="color:red"> Empty</span></h1>
  </div>
  {{/if}}

  <section class="vh-100">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
          <p><span class="h2" style="padding-left:40%;">Shopping Cart </span></p>
          {{#each products}}
          {{> random total}}
          <div class="card mb-4" >
            <div class="card-body p-4">

              <div class="row align-items-center">
                <div class="col-md-1 ratio">
                  <img src="{{this.productId.cat_img}}" class="img-fluid" alt="Product Image">
                </div>
                <div class="col-md-2 d-flex justify-content-center">
                  <div>
                    <p class="small text-muted mb-4 pb-2"></p>
                    <p class="lead fw-normal mb-0">{{this.productName}}</p>
                  </div>
                </div>

                <div class="col-md-2 d-flex justify-content-censter">
                  <div>
                    <p class="small text-muted mb-4 pb-2">Quantity</p>
                    <p class="lead fw-normal mb-0">{{this.quantity}}</p>
                  </div>
                </div>
                <div class="col-md-2 d-flex justify-content-center">
                  <div>
                    <p class="small text-muted mb-4 pb-2">Price</p>
                    <p class="lead fw-normal mb-0">{{this.productId.product_price}}</p>
                  </div>
                </div>
                <div class="col-md-2 d-flex justify-content-center">
                  <div>
                    <p class="small text-muted mb-4 pb-2">Sub Total</p>
                    <p class="lead fw-normal mb-0">{{this.subtotal}}</p>
                  </div>
                </div>
                <div class="col-md-2 d-flex justify-content-center">

                  <div>
                    <p class="small text-muted mb-4 pb-2"></p>
                    <form action="/remove" method="POST">
                      <input type="hidden" name="proid" value="{{this.productId._id}}">
                      <p class="lead fw-normal mb-0">
                        <button style="background-color: white;" type="submit" style="font-size:24px"><i
                            class="fa fa-remove" style="font-size:48px;color:red"></i></button>
                      </p>
                    </form>
                  </div>
                </div>
              </div>

            </div>
          </div>
          {{/each}}

          <div class="card mb-5">
            <div class="card-body p-4">

              <div class="float-end">
                <p class="mb-0 me-5 total ">
                  <span class="large me-2 ">Order total:</span>
                  <span style="color: red; font-weight:600 ;margin-right:90px" class="lead fw-normal">Rs.{{total.total_price}}</span>
                </p>
              </div>


            </div>

          </div>
          <div style="padding-bottom:100px;" class="d-flex justify-content-end">
            <a href="/"> <button style="margin-right:30px;" type="button" class="btn btn-outline-primary">Continue
                Shopping</button></a>
            <form action="/payment" method="get"> <button style="margin-right:30px;" type="submit"
                class="btn btn-outline-primary">Checkout</button></form>
          </div>

        </div>
      </div>
    </div>
  </section>
</body>

</html>