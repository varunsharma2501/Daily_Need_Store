<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <style>
    body {
      margin-top: 20px;
      color: #1a202c;
      text-align: left;
      background-color: #e2e8f0;
    }

    .main-body {
      padding: 15px;
    }

    .card {
      box-shadow: 0 1px 3px 0 rgba(0, 0, 0, .1), 0 1px 2px 0 rgba(0, 0, 0, .06);
    }

    .card {
      position: relative;
      display: flex;
      flex-direction: column;
      min-width: 0;
      word-wrap: break-word;
      background-color: #fff;
      background-clip: border-box;
      border: 0 solid rgba(0, 0, 0, .125);
      border-radius: .25rem;
    }

    .card-body {
      flex: 1 1 auto;
      min-height: 1px;
      padding: 1rem;
    }

    .gutters-sm {
      margin-right: -8px;
      margin-left: -8px;
    }

    .gutters-sm>.col,
    .gutters-sm>[class*=col-] {
      padding-right: 8px;
      padding-left: 8px;
    }

    .mb-3,
    .my-3 {
      margin-bottom: 1rem !important;
    }

    .bg-gray-300 {
      background-color: #e2e8f0;
    }

    .h-100 {
      height: 100% !important;
    }

    .shadow-none {
      box-shadow: none !important;
    }

    .alert {
      opacity: 1;
      transition: opacity 1s linear;
    }

    .alert.hide {
      opacity: 0;
    }
  </style>
</head>

<body>
  {{#if msg}}
  <div id="ordercancel" class="alert alert-success" role="alert">
    {{msg}}
  </div>
  {{/if}}

  {{#if err}}
  <div id="ordercancel" class="alert alert-success" role="alert">
    {{err}}
  </div>
  {{/if}}

  <div class="container">
    <div class="main-body">



      {{>random userprofile }}
      <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-column align-items-center text-center">
                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle"
                  width="150">
                <div class="mt-3">
                  <h4>{{userprofile.name}}</h4>
                  <BR><BR>
                  <p class="text-secondary mb-1"></p>
                  <p class="text-muted font-size-sm"></p>
                  <div style="display:flex;justify-content: space-between;">
                    <form action="/logout" method="get"> <button type="submit" class="btn btn-primary">LOG OUT
                      </button></form >
                    <form action="/" method="get"> &nbsp; &nbsp;  <button type="submit" class="btn btn-outline-primary">Home</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>
        <div class="col-md-8">
          <div class="card mb-3">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{userprofile.name}}
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Gender</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{userprofile.gender}}
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Phone</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{userprofile.telephone}}
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Date Of Birth</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{userprofile.Dob}}
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{userprofile.email}}
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Address</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{userprofile.address}}
                </div>
              </div>


            </div>
          </div>





        </div>
        <div class="col-md-8">
          <div class="card mb-3" style="width:1080px;">
            <div class="container mt-5">
              <div class="d-flex justify-content-center row">
                <div class="col-md-10">
                  <div class="rounded">
                    <div class="table-responsive table-borderless">
                      <table class="table">
                        <thead>
                          <tr>
                            <th class="text-center">
                              <div class="toggle-btn">
                                <div class="inner-circle"></div>
                              </div>
                            </th>
                            <th>Order</th>


                            <th>Total</th>
                            <th>Ordere -Timing</th>
                            <th>status</th>
                            <th></th>
                          </tr>
                        </thead>{{>random orderhistory}}
                        {{#each orderhistory}}
                        <tbody class="table-body">
                          <tr class="cell-1">
                            <td class="text-center">
                              <div class="toggle-btn">
                                <div class="inner-circle"></div>
                              </div>
                            </td>



                            <td>{{this._id}}</td>


                            <td><i class="fa fa-inr" aria-hidden="true">{{this.total_price}}</i></td>
                            <td>{{#each this.items}}{{this.productName}}{{/each}}</td>
                            <td> {{#if (eq this.status "Pending")}}<span class="badge badge-danger">{{this.status}}
                                {{else }}<span class="badge badge-success  ">{{this.status}}{{/if}}
                                </span></td>

                            <TD></TD>
                            <td></td>
                            <td> {{#if (eq this.status "Pending")}}
                              <form action="/cancelorder" method="post">
                                <input type="hidden" name="cancelorder" value="{{this._id}}">
                               
                                 <button type="submit" style="border-radius: 50px"
                                  class="btn btn-outline-danger btn-sm">Cancel Order</button>
                              </form>
                             
                             {{else }} 
                              <form action="/invoice" method="post">
                              <input type="hidden"name="invoice" value="{{this._id}}">  
                              <button type="submit" style="border-radius: 50px" class="btn btn-outline-success btn-sm">Invoice</button>
                              </form>
                              {{/if}}

                            </td>
                          </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>





      </div>
    </div>

  </div>
  </div>
  <!-- Code injected by live-server -->
  <script>
    var alert = document.getElementById("ordercancel")
    setTimeout(function () {
      alert.classList.add("hide");
    }, 5000)
  </script>

</body>

</html>